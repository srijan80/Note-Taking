<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <div class="main w-full min-h-screen bg-zinc-950">
      <div class="form p-10 text-white">
        <form action="create" method="post">
          <input
            class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700"
            type="text"
            placeholder="Title"
            name="title"
          />

          <textarea
            class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700 mt-2 resize-none"
            placeholder="Detail"
            name="details"
          >
          </textarea>

          <button
            class="mt-2 text-white bg-blue-600 py-2 px-4 rounded-md"
            type="submit"
          >
            Create Task
          </button>
        </form>
      </div>

      <div class="tasks p-10 flex gap-3 flex-wrap">
        <%if(files.length>0){%> <%files.forEach(function (val){%>

        <div class="task w-72 px-3 py-4 bg-zinc-700 rounded-md">
          <h1 class="text-white text-3xl tracking-tighter"><%=val %></h1>
          <div class="flex w-full justify-between items-center mt-2">
            <a class="text-blue-600 inline-block" href="/file/<%= val %>">Read more</a>
            <a class="text-red-600 inline-block" href="/delete/<%=val%>">Delete</a>
            <a class="text-blue-600 inline-block" href="/edit/<%= val %>">Edit</a>
          </div>
        
        </div>

        <%})%> <%}else{%>
        <h3 class="text-zinc-500">No task yet.</h3>
        <%}%>
      </div>
    </div>
  </body>
</html>
